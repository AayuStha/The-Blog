<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link rel="stylesheet" href="/stylesheets/blogDetail.css">
    <title><%= blog.title %></title>
</head>
<body>
    <h1><a href="/">THE BLOG</a></h1>
    <hr>
    
    <div class="blog-container">
        <div class="blog-main">
            <div class="blog-detail">
                <h1><%= blog.title %></h1>
                <img src="<%= blog.imgSrc %>" alt="<%= blog.title %>">
                <p><%= blog.content %></p>
            </div>
        </div>
        <hr id="hr">
        <div class="sidebar">
            <h2>Related Posts</h2>
            <ul>
                <% relatedBlogs.forEach(relatedBlog => { %>
                    <li>
                        <a href="/blog/<%= relatedBlog.id %>">
                            <img src="<%= relatedBlog.imgSrc %>" alt="<%= relatedBlog.title %>">
                            <h3><%= relatedBlog.title %></h3>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </div>
    </div>
        <%- include('./partials/footer.ejs') %>
</body>
</html>